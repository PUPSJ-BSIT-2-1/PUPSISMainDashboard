<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="810.0" styleClass="root" stylesheets="@../css/ADMINSubjectModule.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pupsis_main_dashboard.controllers.ADMINSubjectController">
    <children>
        <BorderPane prefHeight="800.0" prefWidth="810.0">
            <top>
                <Pane prefHeight="99.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="99.0" prefWidth="810.0" spacing="15.0">
                            <children>
                                <VBox alignment="TOP_LEFT" spacing="2.0">
                                    <children>
                                        <Label fx:id="subjectsHeaderLbl" prefWidth="558.0" text="Subject Description" textFill="WHITE">
                                            <styleClass>
                                                <String fx:value="bold-label" />
                                            </styleClass>
                                            <font>
                                                <Font name="Inter" size="30.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER_RIGHT" prefHeight="52.0" prefWidth="570.0" />
                            </children>
                            <padding>
                                <Insets bottom="16.0" left="30.0" right="16.0" top="26.0" />
                            </padding>
                        </HBox>
                    </children>
                    <styleClass>
                        <String fx:value="cards" />
                        <String fx:value="red-card" />
                    </styleClass>
                </Pane>
            </top>

            <center>
                <Pane prefHeight="650.0" prefWidth="750.0" BorderPane.alignment="CENTER">
                    <children>
                        <VBox layoutX="-26.0" prefHeight="650.0" prefWidth="804.0" spacing="10.0">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <children>
                                <!-- Controls -->
                                <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="789.0" spacing="10.0" styleClass="small-cards">
                                    <padding>
                                        <Insets left="10.0" right="10.0" />
                                    </padding>
                                    <children>
                                        <ComboBox fx:id="yearSemComboBox" prefHeight="46.0" prefWidth="227.0" promptText="Year &amp; Semester">
                                            <styleClass>
                                                <String fx:value="cards" />
                                                <String fx:value="red-card" />
                                                <String fx:value="white-text" />
                                            </styleClass>
                                        </ComboBox>

                                        <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                            <padding>
                                                <Insets right="20.0" />
                                            </padding>
                                            <children>
                                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true">
                                                    <image>
                                                        <Image url="@../Images/search_icon.png" />
                                                    </image>
                                                </ImageView>
                                                <TextField fx:id="searchBar" prefWidth="200.0" promptText="Search subject code, description..." />
                                                <Label fx:id="validationLabel" />
                                            </children>
                                        </HBox>
                                    </children>
                                </HBox>

                                <!-- Table -->
                                <HBox prefHeight="500.0" styleClass="small-cards">
                                    <children>
                                        <TableView fx:id="tableView" layoutX="20" layoutY="20" prefHeight="476.0" prefWidth="786.0">
                                            <columns>
                                                <TableColumn fx:id="subjectCodeColumn" prefWidth="114.39994621276855" text="Subject Code" />
                                                <TableColumn fx:id="prerequisiteColumn" prefWidth="127.20001983642578" text="Prerequisite" />
                                                <TableColumn fx:id="equivSubjectCodeColumn" prefWidth="127.20001220703125" text="Equivalent Code" />
                                                <TableColumn fx:id="descriptionColumn" prefWidth="327.99981689453125" text="Description" />
                                                <TableColumn fx:id="unitColumn" prefWidth="79.199951171875" text="Units" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </Pane>
            </center>

            <left>
                <Pane prefWidth="30.0" BorderPane.alignment="CENTER" />
            </left>
            <right>
                <Pane prefWidth="30.0" BorderPane.alignment="CENTER" />
            </right>

            <bottom>
                <Pane prefHeight="80.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER_RIGHT" layoutX="0.0" layoutY="20.0" prefWidth="810.0" spacing="15.0">
                            <padding>
                                <Insets right="30.0" top="5.0" />
                            </padding>
                            <children>
                                <Button fx:id="addButton" prefWidth="93.0" styleClass="styled-button" text="Add" />
                                <Button fx:id="editButton" styleClass="styled-button" text="Edit" />
                                <Button fx:id="deleteButton" styleClass="styled-button" text="Delete" />
                                <Button fx:id="refreshButton" styleClass="styled-button" text="Refresh" />
                            </children>
                        </HBox>
                    </children>
                    <styleClass>
                        <String fx:value="cards" />
                        <String fx:value="red-card" />
                    </styleClass>
                </Pane>
            </bottom>

        </BorderPane>
    </children>
</AnchorPane>
