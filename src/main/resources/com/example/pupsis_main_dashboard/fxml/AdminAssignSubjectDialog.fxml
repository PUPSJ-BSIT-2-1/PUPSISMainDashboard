<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pupsis_main_dashboard.controllers.AdminAssignSubjectDialogController"
      spacing="15" style="-fx-background-color: #f8fcfc; -fx-padding: 20 20 20 20;">

    <Label text="Assign Subject to Faculty" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #800000;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Subject Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="subjectComboBox" promptText="Select Subject Code" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Section:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="sectionComboBox" promptText="Select Section" prefWidth="250" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" />
        <Button text="Assign" onAction="#handleAssign" />
    </HBox>
</VBox>
