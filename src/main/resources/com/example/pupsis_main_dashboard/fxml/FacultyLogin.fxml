                         <Insets left="15.0" />
                     </padding>
                     <VBox.margin>
                         <Insets bottom="10.0" />
                     </VBox.margin>
                 </TextField>
                 <PasswordField fx:id="passwordField" promptText="Password" styleClass="fields">
                     <padding>
                         <Insets left="15.0" />
                     </padding>
                     <VBox.margin>
                         <Insets bottom="20.0" />
                     </VBox.margin>
                 </PasswordField>
                <HBox alignment="CENTER_LEFT">
                   <VBox.margin>
                      <Insets bottom="50.0" />
                   </VBox.margin>
                   <children>
                      <ToggleButton fx:id="rememberMeCheckBox" mnemonicParsing="false" prefHeight="26.0" prefWidth="52.0" styleClass="switch-toggle-button" stylesheets="@../css/ToggleSwitch.css" text="ToggleButton">
                          <graphic>
                              <Region styleClass="thumb" />
                          </graphic>
                      </ToggleButton>
                      <Label prefHeight="23.0" prefWidth="139.0" styleClass="font" text="Remember me">
