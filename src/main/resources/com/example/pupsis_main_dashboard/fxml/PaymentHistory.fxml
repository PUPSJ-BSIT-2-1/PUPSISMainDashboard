<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="6"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pupsis_main_dashboard.controllers.PaymentHistoryController"
      stylesheets="@../css/PaymentInfo.css"
      styleClass="font-compact">

    <!-- Back Button -->
    <HBox spacing="6" alignment="CENTER_RIGHT" style="-fx-padding: -50 0 0 0;">
        <Button fx:id="backButton" text="← Back to Payment Info" styleClass="action-button"/>
    </HBox>

    <!-- Transaction Table -->
    <VBox spacing="6" styleClass="cards" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="6" right="12" bottom="6" left="12" />
        </padding>

        <Label styleClass="section-header" text="Transaction History" />

        <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="180"/>
                <TableColumn fx:id="orNumberColumn" text="O.R. No." prefWidth="100"/>
                <TableColumn fx:id="debitColumn" text="Debit (₱)" prefWidth="90"/>
                <TableColumn fx:id="creditColumn" text="Credit (₱)" prefWidth="90"/>
                <TableColumn fx:id="balanceColumn" text="Balance (₱)" prefWidth="90"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Optional Bottom Buttons -->
    <HBox spacing="6" alignment="CENTER_RIGHT">
        <Button text="Print Summary" styleClass="action-button"/>
        <Button text="Download Receipt" styleClass="action-button"/>
    </HBox>

</VBox>
