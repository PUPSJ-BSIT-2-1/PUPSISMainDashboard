<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefWidth="1280.0" styleClass="root" stylesheets="@../css/FrontPage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pupsis_main_dashboard.controllers.FrontPageController">
   <clip>
      <Rectangle arcHeight="30.0" arcWidth="30.0" height="720" width="1280" />
   </clip>
   <ImageView fx:id="background" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" styleClass="background">
      <image>
         <Image url="@../Images/PUPSJ.png" />
      </image>
   </ImageView>

   <!-- Title -->
   <Label fx:id="labelHeader" layoutX="286.0" layoutY="310.0" prefHeight="71.0" prefWidth="802.0" styleClass="label-header" text="Welcome to PUPSIS Portal" />
   <HBox alignment="CENTER" layoutX="220.0" layoutY="58.0" prefHeight="68.0" prefWidth="840.0" styleClass="navigation-bar">
      <padding>
         <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
      </padding>
      <ImageView fitHeight="47.0" fitWidth="175.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@../Images/PUPSJ Logo.png" />
      </ImageView>
      <Label styleClass="pupsis" text="PUPSIS">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Label>
      <Region prefHeight="47.0" prefWidth="60.0" HBox.hgrow="ALWAYS" />
      <Button fx:id="coaButton" alignment="CENTER" prefHeight="31.0" prefWidth="74.0" styleClass="buttons" text="COA" />
      <Button fx:id="programsButton" prefHeight="31.0" prefWidth="97.0" styleClass="buttons" text="Programs" />
      <Button fx:id="aboutButton" prefHeight="31.0" prefWidth="95.0" styleClass="buttons" text="About" />
      <Button fx:id="othersButton" alignment="CENTER" prefHeight="31.0" prefWidth="84.0" styleClass="buttons" text="Others" />
      <Button fx:id="getStartedButton" onAction="#handleGetStartedButton" prefHeight="31.0" prefWidth="166.0" styleClass="get-started" text="Get Started" textAlignment="CENTER">
         <HBox.margin>
            <Insets left="30.0" />
         </HBox.margin>
      </Button>
   </HBox>

</AnchorPane>
